<core:FragmentDefinition xmlns="sap.m"
	xmlns:table="sap.ui.comp.smarttable"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" xmlns:core="sap.ui.core">
	<Dialog id="displayDataDialog" resizable="true" width="90%" stretch="true" draggable="true">
		<customHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<Label text="View Data"/>
				<ToolbarSpacer/>
				<Button icon="sap-icon://sys-cancel" press="closeDataDialog"/>
			</Toolbar>
		</customHeader>
		<content>
			<smartFilterBar:SmartFilterBar id="smartFilterBar" />
			<table:SmartTable 
				id="displayDataDialogTable" 
				header="Display Data" 
				smartFilterId="smartFilterBar"
				initiallyVisibleFields="ID"
				useExportToExcel="true" 
				demandPopin="true"
				tableType="ResponsiveTable"
				enableAutoBinding="true">
				<Table  growing="true">
					<columns>
						<Column width="12em">
						<customData>
							<core:CustomData key="p13nData"
								value='\{"maxLength": "5","columnIndex":"6"}' />
						</customData>
							<Text text="Actions" />
						</Column>
					</columns>
					<items>
						<ColumnListItem type="Navigation">
							<cells>
								<HBox>
									<Button type="Transparent" text="Edit" icon="sap-icon://edit"/>
									<Button type="Transparent" text="Delete" icon="sap-icon://delete" press="viewDataDeleteEntry"/>
								</HBox>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</table:SmartTable>
		</content>
	</Dialog>
</core:FragmentDefinition>